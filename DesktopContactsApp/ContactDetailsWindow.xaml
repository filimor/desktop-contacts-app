<Window x:Class="DesktopContactsApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DesktopContactsApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="ContactDetailsWindow"
        Width="300"
        Height="300"
        mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5" />
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5" />
            <TextBox x:Name="phoneNumber" Margin="0,0,0,5" />
            <Button x:Name="updateButton"
                    Margin="0,0,0,5"
                    Click="UpdateButton_Click"
                    Content="Save" />
            <Button x:Name="deleteButton"
                    Margin="0,0,0,5"
                    Background="Red"
                    Click="DeleteButton_Click"
                    Content="Delete"
                    Foreground="White" />
        </StackPanel>
    </Grid>
</Window>