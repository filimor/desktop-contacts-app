<Window x:Class="DesktopContactsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DesktopContactsApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:DesktopContactsApp.Controls"
        Title="MainWindow"
        Width="500"
        Height="360"
        mc:Ignorable="d">
    <StackPanel Margin="10">
        <Button x:Name="newContactButton"
                Click="NewContactButton_Click"
                Content="New contact" />
        <TextBox x:Name="searchTextBox" Margin="0,5,0,5"
                 TextChanged="SearchTextBox_TextChanged"/>
        <ListView x:Name="contactsListView"
                  Height="280"
                  Margin="0,5,0,0"
                  SelectionChanged="ContactsListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <uc:ContactControl Contact="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Window>